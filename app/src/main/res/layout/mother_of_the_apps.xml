    <Button
        android:id="@+id/btnBreakingBadApp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:text="@string/breaking_bad_api"
        app:layout_constraintBottom_toTopOf="@+id/btnPushNotificationApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTodolistAndCalculator" />

    <Button
        android:id="@+id/btnPushNotificationApp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:text="@string/navigation_drawer"
        app:layout_constraintBottom_toTopOf="@+id/btnClothesApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBreakingBadApp" />

    <Button
        android:id="@+id/btnClothesApp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
